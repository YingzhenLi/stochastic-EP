  \long\gdef\beamer@processframeline#1^^M{%
    \def\beamer@test{#1}%
    \ifx\beamer@test\beamer@stopframe%
      \let\next=\beamer@framewritten%
    \else%
      \immediate\write\beamer@verbatimfileout{#1}%
      \let\next=\beamer@processframeline%
    \fi%
    \next%
  }%
